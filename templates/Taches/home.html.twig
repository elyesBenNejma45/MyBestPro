{% block body %}

<div class="jumbotron text-center">
<div class="jumbotron">
    <div class = "container">
     {{form_start(form)}}
        <div class ="form-row">
            <div class ="col">
                {{form_row(form.statut)}} 
            </div>
            <div class ="col">
                <button class ="btn btn-primary" style = "margin-top:30px">Rechercher</button> 
            </div>

        </div>
        {{form_end(form)}}
    </div>
</div>
</div>
<div class ="container">
    <h2> les Taches</h2>
    <div class="row flex">
    {% for tache in tachesSearch %}
